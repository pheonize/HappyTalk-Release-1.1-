<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.happytalk.happytalk.MainActivity"
    android:configChanges="locale"

    android:background="#ffffff">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutSearch">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/from"-->
            <!--android:id="@+id/from"-->
            <!-->-->

            <!--</TextView>-->
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_show"
            android:layout_weight="1"
            android:drawSelectorOnTop="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:id="@+id/to"
            android:paddingTop="25dp"
            android:src="@drawable/arrow"
            />
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2_show"
            android:layout_weight="1"
            android:drawSelectorOnTop="true"
            android:layout_marginLeft="10dp" />


    </LinearLayout>



    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/linearLayoutMenu">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:id="@+id/listView"
            android:layout_weight="1"


            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_alignParentBottom="true" >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/sososo"
            android:background="@drawable/sss"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:tag="http://www.thaihealth.or.th"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/happytalk"
            android:background="@drawable/happytalk"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:tag="http://www.thaihealth.or.th"

            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/mol"
            android:background="@drawable/logo_mol"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:tag="http://www.mol.go.th/"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logistic"
            android:background="@drawable/logis"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"/>

        </LinearLayout>


</RelativeLayout>
