<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oVANILLAz.happytalk"
    android:configChanges="locale|layoutDirection"
    android:screenOrientation="portrait">>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <uses-permission
            android:name="android.permission.INTERNET" />

        <activity
            android:name="oVANILLAz.happytalk.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="oVANILLAz.happytalk.MainActivity"
            android:configChanges="locale|layoutDirection"></activity>
        <activity android:name="oVANILLAz.happytalk.ConversationActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.ThingActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.PlaceActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.HelpActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.LogisticActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.FavoriteActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.LanguageActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>


        <activity android:name="oVANILLAz.happytalk.ShowDataActivity"
            android:configChanges="locale|layoutDirection"/>



        <provider
            android:authorities="oVANILLAz.happytalk"
            android:name="oVANILLAz.happytalk.MySuggestionProvider"/>

        <activity android:name="oVANILLAz.happytalk.SettingActivity"
            android:label="@string/action_settings"
            android:parentActivityName="oVANILLAz.happytalk.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name="oVANILLAz.happytalk.SearchActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
